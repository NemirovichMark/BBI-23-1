using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading;
using System.Threading.Tasks;

namespace Lab6
{
    class Program
    {
        struct Sportswoman
        {
            public string Surname;
            public int Group;
            public string TrainerName;
            public int Sec;
            public Sportswoman(string surname, int group, string trainerName, int sec)
            {
                Surname=surname;
                Group=group;
                TrainerName=trainerName;
                Sec=sec;
            }
            public void ShowInfo()
            {
                Console.WriteLine($"Фамилия: {Surname}, группа: {Group}, имя тренера: {TrainerName}, резульат: {Sec} секунд, норматив сдан: {normaPassed(Sec)}");
            }
        }
        const int norma = 110;
        static bool normaPassed(int sec)
        {
            return sec <= norma;
        }
        static void quickSort(Sportswoman[] table, int left, int right)
        {
            if (left >= right) return;
            int p = table[(left + right)/ 2].Sec;
            int i= left;
            int j = right;
            while (i <= j)
            {
                while (table[i].Sec < p) i++;
                while (table[j].Sec > p) j--;
                if (i <= j)
                {
                    Sportswoman a = table[i];
                    table[i] = table[j];
                    table[j] = a;
                    i++;
                    j--;
                }
            }
            quickSort(table, left, j);
            quickSort(table, i, right);
        }
        static void Main()
        {
            Console.WriteLine($"Таблица результатов кросса на 500 м среди девушек, норматив - {norma} секунд");
            int count = 0;
            Sportswoman[] table = new Sportswoman[5] {new Sportswoman("Кукушкина", 1, "Овечкин", 111), new Sportswoman("Соловьёва", 1, "Зверев", 107), new Sportswoman("Воробьёва", 2, "Козлов", 112), new Sportswoman("Синицына", 2, "Зайцев", 109), new Sportswoman("Орлова", 1, "Волков", 110)};
            quickSort(table, 0, table.Length - 1);
            for (int i = 0; i<table.Length; i++)
            {
                table[i].ShowInfo();

                if (normaPassed(table[i].Sec)) count++;
            }
            Console.WriteLine($"Количество спортсменок, сдавших норматив: {count}");
            Console.ReadKey();
        }
    }
}
