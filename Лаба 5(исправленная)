/* using System;
class Program
{
    static void Main(string[] args)
    {
        int[,] A = new int[,]
        {
            { 1, 2, 3 },
            { 4, 5, 6 },
            { 0, 8, 9 }
        };

        Console.WriteLine("Исходная матрица:");
        PrintMatrix(A);

        A = delsrt(A);

        Console.WriteLine("Матрица после удаления строк:");
        PrintMatrix(A);
    }

    static int[,] delsrt(int[,] matrix)
    {
        int rows = matrix.GetLength(0);
        int cols = matrix.GetLength(1);

        int min = int.MaxValue;
        int max = int.MinValue;

        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++)
            {
                if (matrix[i, j] < min)
                    min = matrix[i, j];

                if (matrix[i, j] > max)
                    max = matrix[i, j];
            }
        }

        // Подсчитываем количество строк, которые нужно удалить
        int rowsdel = 0;
        for (int i = 0; i < rows; i++)
        {
            bool hasmin = false;
            bool hasmax = false;

            for (int j = 0; j < cols; j++)
            {
                if (matrix[i, j] == min)
                    hasmin = true;

                if (matrix[i, j] == max)
                    hasmax = true;
            }

            if (hasmin && hasmax)
                rowsdel++;
        }

        // Создаем новую матрицу с учетом удаленных строк
        int[,] newA = new int[rows - rowsdel, cols];
        int newrow = 0;

        for (int i = 0; i < rows; i++)
        {
            bool hasmin = false;
            bool hasmax = false;

            for (int j = 0; j < cols; j++)
            {
                if (matrix[i, j] == min)
                    hasmin = true;

                if (matrix[i, j] == max)
                    hasmax = true;
            }

            if (!hasmin && !hasmax)
            {
                for (int j = 0; j < cols; j++)
                {
                    newA[newrow, j] = matrix[i, j];
                }
                newrow++;
            }
        }
        return newA;
    }
    static void PrintMatrix(int[,] matrix)
    {
        int rows = matrix.GetLength(0);
        int cols = matrix.GetLength(1);

        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++)
            {
                Console.Write(matrix[i, j] + " ");
            }
            Console.WriteLine();
        }
        Console.WriteLine();
    }
}*/

