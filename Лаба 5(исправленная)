                    max = k;
                    f = j;
                }
            }
            for (i = 4; i > f; i--)
            {
                for (j = 0; j < 5; j++)
                {
                    B[i, j] = B[i - 1, j];
                }
            }
            max1 = 0;
            for (j = 0; j < 6; j++)
            {
                Count(C, 5, 1, j, out k);
                if (max1 < k)
                {
                    max1 = k;
                    f1 = j;
                }
            }
            for (j = 0; j < 5; j++)
            {
                B[f + 1, j] = C[j, f1];
            }
            Console.WriteLine("Матрица B с включенным столбцом матрицы C");
            PrintMatrix(B, 5, 5);
        }
        static void Count(double[,] a, int n, int prs, int j, out int k)
        {
            int i;
            double l;
            k = 0;
            for (i = 0; i < n; i++)
            {
                if (prs == 0) l = a[j, i]; else l = a[i, j];
                if (l > 0) k++;
            }
        }
        static void PrintMatrix(double[,] matrix, int rows, int columns)
        {
            for (int i = 0; i < rows; i++)
            {
                for (int j = 0; j < columns; j++)
                {
                    Console.Write($"{matrix[i, j],4:f0}");
                }
                Console.WriteLine();
            }
        }
    }
